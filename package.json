{
  "name": "onis",
  "version": "0.1.0",
  "description": "Modularized framework",
  "author": "Igor Leahu <igor.leahu@gmail.com>",
  "repository": "github:hobroker/onis",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "babel src -d dist --copy-files",
    "build:watch": "npm run build -- --watch",
    "example": "node -r @babel/register example/index.js",
    "test": "NODE_ENV=test jest",
    "test:coverage": "npm t -- --coverage",
    "lint": "eslint src tests example --ext .js --max-warnings 0"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "eventemitter2": "^6.0.0",
    "glob": "^7.1.6",
    "lodash": "^4.17.15",
    "nanoevents": "^2.0.0",
    "ramda": "^0.26.1",
    "ramda-adjunct": "^2.23.0",
    "rxjs": "^6.5.4",
    "yargs": "^15.1.0",
    "yup": "^0.28.0",
    "apollo-server-express": "^2.9.15",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "graphql-tools": "^4.0.6",
    "http-status-codes": "^1.4.0",
    "mongoose": "^5.8.6",
    "morgan": "^1.9.1",
    "spotify-web-api-node": "^4.0.0",
    "url": "^0.11.0",
    "url-parse": "^1.4.7",
    "winston": "^3.2.1",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-proposal-export-default-from": "^7.7.4",
    "@babel/plugin-proposal-function-bind": "^7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-proposal-throw-expressions": "^7.7.4",
    "@babel/plugin-syntax-decorators": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "babel-eslint": "^10.0.3",
    "babel-plugin-inline-import": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.1",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(src|tests)/**/*.js": [
      "eslint --max-warnings 0"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "/build"
    ],
    "testEnvironment": "node"
  }
}
