{
  "name": "oxium",
  "version": "0.1.0",
  "description": "Functional modularized framework",
  "author": "Igor Leahu <igor.leahu@gmail.com>",
  "repository": "github:hobroker/oxium",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "module": "src/main.js",
  "files": [
    "/src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "DEBUG=oxium* node src/index.js",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src --ext .js --max-warnings 0 --fix"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "esm": "^3.2.25",
    "ramda": "^0.27.0",
    "ramda-adjunct": "^2.25.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "eslint --max-warnings 0 --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      "/dist"
    ],
    "testEnvironment": "node",
    "transform": {
      "\\.js$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    }
  }
}
